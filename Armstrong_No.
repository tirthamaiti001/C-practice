//Check if a number is Armstrong number or not??
#include <stdio.h>

int main()
{
    int num, a, rem, pow, sum = 0;
    printf("Enter a number: ");
    scanf("%d", &num);
    a = num;

    while (num != 0)
    {
        rem = num % 10;
        pow = rem * rem * rem;
        sum += pow;
        num /= 10;
    }

    if (sum == a)
        printf("%d is an Armstrong number.\n", a);
    else
        printf("%d is not an Armstrong number.\n", a);

    return 0;
}
